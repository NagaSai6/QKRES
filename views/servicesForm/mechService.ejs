<body class="text-center">
  <div id="particles-js"><canvas class="particles-js-canvas-el" width="1889" height="349" style="width: 100%; height: 100%;"></canvas></div>
  <%- include("../navbar.ejs")  %>

<div class="signup-form container">
<% data.forEach(function(e){ %>
    <form action="/mechServiceForm" method="post" class="form-signin" enctype="multipart/form-data">
        <img class="mb-2" src="images/Qres.logo.png" alt="" height="40">
        <h4 class="mb-2 font-weight-normal" style="  font-family: 'Lato',sans-serif;"><%=e.name%></h4>
        <div class="form-group">
    
                <input type="text" class="form-control input-md" name="customerName" placeholder="Name" required="required">
            </div>
            <div class="form-group">
                <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                <input type="email" class="form-control input-sm" name="email" placeholder="Email Address" required="required">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-sm" name="department" placeholder="Department" required="required">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-sm" name="insti" placeholder="Institute">
            </div>
          
            <div class="form-group"  >
    <textarea style="border-radius: 10px;outline: none !important;padding: 5px;"   name="requirement" id="" class=" input-sm" cols="47" rows="6" placeholder="Tell us your Requirement"></textarea>        </div>
     
    <!-- <b  class="my-3">upload requirement file :</b> -->
<b>Service Requirement File</b>
                <input id="fileUpload"  type="file" accept=".pdf .doc .docx" class="input-sm my-2" name="fileToUpload" placeholder="uploadFile" required="required" style="margin-bottom:10px;">
<div>     
    <b>How Frequently your firm/work needs this service ?</b>
</div>               
<div class="form-check">
    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios1" value="option1" checked>
    <label class="form-check-label" for="exampleRadios1">
     very Frequently(once in a month or less)
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios2" value="option2">
    <label class="form-check-label" for="exampleRadios2">
      Rare
    </label>
  </div>
  <div class="form-check disabled">
    <input class="form-check-input" type="radio" name="exampleRadios" id="exampleRadios3" value="option3">
    <label class="form-check-label" for="exampleRadios3">
      Other
    </label>
  </div>

  <div class="form-group">
    <input type="text" class="form-control input-sm my-2" name="other" placeholder="If you chose Other,kindly let us know">
</div>

    
        <button id="signbutton" style="border-radius:50px;" class="btn btn-lg btn-primary btn-block" type="submit">Submit</button>
        <p class="mt-2 mb-2 text-muted">Â© 2020-2021</p>
      </form>

<% }) %>
</div>

