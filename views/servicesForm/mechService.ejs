<div class="signup-form container">
<% data.forEach(function(e){ %>
    <form action="/upload/single" method="post" class="form-signin" enctype="multipart/form-data">
        <img class="mb-2" src="../images/Qres.logo.png" alt="" height="40">
        <h4 class="mb-2 font-weight-normal" style="  font-family: 'Lato',sans-serif;"><%=e.name%></h4>
        <div class="form-group">
          <% if(messages.error){ %>
            <span style="color:red;"><%= messages.error %>  </span>
        <%  }%>
          <input type="hidden" name="id" value="<%=e._id%>">
          <input type="hidden" name="serviceName" value="<%=e.name%>">
                <input type="text" class="form-control input-md" value="<%=messages.customerName%>" name="customerName" placeholder="Name" required="required">
            </div>
            <div class="form-group">
                <input type="email" class="form-control input-sm" value="<%=messages.email%>" name="email" placeholder="Email Address" required="required">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-sm" value="<%=messages.department%>"  name="department" placeholder="Department" required="required">
            </div>
            <div class="form-group">
                <input type="text" class="form-control input-sm" value="<%=messages.insti%>" name="insti" placeholder="Institute">
            </div>
          
            <div class="form-group"  >
    <textarea id="textArea"  name="requirement" id="" class=" input-sm" cols="40" rows="4" placeholder="Tell us your Requirement" required="required"></textarea>        </div>
     
<b>Service Requirement File</b>
                <input id="fileUpload"  type="file" accept=".pdf" class="input-sm my-2" name="file" placeholder="uploadFile" required="required" style="margin-bottom:10px;">
<div>     
    <b>How Frequently your firm/work needs this service ?</b>
</div>               
