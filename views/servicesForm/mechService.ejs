    <input class="form-check-input" type="radio" name="frequency" id="exampleRadios1" value="very Frequently(once in a month or less)" checked>
    <label class="form-check-label" for="exampleRadios1">
     very Frequently(once in a month or less)
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="frequency" id="exampleRadios2" value="Rare">
    <label class="form-check-label" for="exampleRadios2">
      Rare
    </label>
  </div>
  <div class="form-check ">
    <input class="form-check-input" type="radio" name="frequency" id="exampleRadios3" value="Other">
    <label class="form-check-label" for="exampleRadios3">
      Other
    </label>
  </div>

  <div class="form-group">
    <input type="text" class="form-control input-sm my-2" value="<%=messages.other%>" name="other" placeholder="If you chose Other,kindly let us know">
</div>

   
        <a href="#helper" id="signbutton" style="border-radius:50px;" class="btn btn-lg btn-primary btn-block" onclick="myFunction()">Continue</a>
