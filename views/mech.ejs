<body onload="myFunction()">
  <div id="mechLoader" style=" position: fixed;
width: 100%;
height: 100vh;
background:#fff
url('/images/mechPage.gif')
 no-repeat center center;	
z-index: 999999999;"></div>
  <div id="particles-js"><canvas class="particles-js-canvas-el" width="1889" height="349" style="width: 100%; height: 100%;"></canvas></div>
  <%- include("../views/navbar.ejs")  %>

  <div id="head">
    <div id="title" data-aos="flip-left">
      <h2>Mechanical Equipments</h1>
    </div>
    <div class="arrow bounce">
      <a style="color:white;" class="fa fa-angle-down fa-3x" href="#Nsiqwe"></a>
    </div>
  </div>
  <div class="wrap" id="content">
    <section id="first">
      <!-- invisible div  -->
      <div style="height:64px;" class="boxes invisible" id="Nsiqwe">
        <h1>this content wont visible bro just chill</h1>
      </div>
      <div class="boxes">
        <div id="Nsj" class="box-1">
          <h4>Our Services</h4>
        </div>
        <div class="container-fluid row mx-auto ">
          <% mech.forEach(function(e){ %>
          <div class="col-md-4 my-4 elec">
            <div class="text-center">
              <img style="height:120px;" class="mb-4 menu_img" src="/<%= e.image %>" alt="img">
            </div>
            <div class="text-center">
              <h2 style="font-size:1rem;" class="mb-2"><%= e.name %></h2>
              <div class="d-flex justify-content-center  mt-2">

               <a href="/mech/<%=e._id%>" class="btn btn-sm btn-block btn-primary" id="formButton">Submit your requirement</a>

              </div>
              <div class="d-flex justify-content-left  mt-2">  
              </div>
            </div>
          </div>

          <%    }) %>
        </div>
      </div>
    </section>
  </div>
  </section>
  </div>

  <%- include("../views/footer.ejs") %>

  <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
